.div-nav
  %nav.navbar.navbar-static-top.navbar-expand-lg.navbar-light
    %div
      = image_tag('logo.jpg', class: "d-inline-block align-top logo-img")
      = link_to home_path, id: 'logo-text', class: 'navbar-brand texty' do
        EUREKA
        %br/
        CAFFEE
    %button.navbar-toggler{ 'aria-controls' => 'navbar-nav', 'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation', 'data-target' => '#navbar-nav', 'data-toggle' => 'collapse', :type => 'button' }
      %span.navbar-toggler-icon
    #navbar-nav.collapse.navbar-collapse.bg-custom
      %ul#menu-top.navbar-nav.ml-auto
        %li.nav-item.active
          = link_to home_path, class: 'nav-link texty' do
            = content_tag(:span, '·', class: 'middot')
            HOME
        %li.nav-item
          = link_to about_path, class: 'nav-link texty' do
            = content_tag(:span, '·', class: 'middot')
            ABOUT
        %li.nav-item
          = link_to service_path, class: 'nav-link texty' do
            = content_tag(:span, '·', class: 'middot')
            SERVICE
        %li.nav-item
          = link_to blog_path, class: 'nav-link texty' do
            = content_tag(:span, '·', class: 'middot')
            BLOG
        %li.nav-item
          = link_to contacts_path, class: 'nav-link texty' do
            = content_tag(:span, '·', class: 'middot')
            CONTACTS
        %li{ :class => "cart-holder #{cart_properties['status']}" }
          = link_to carts_path, class: 'cart left no_left_pad nav-link texty', id: 'cart'  do
            %i.fas.fa-shopping-cart
        - if current_user
          %li.nav-item.dropdown
            %a.dropdown-toggle.texty.nav-link{ 'data-toggle' => 'dropdown', :href => '#' }
              Account
            %ul.dropdown-menu.texty
              %li= link_to 'Profile', current_user
              %li= link_to 'Settings', edit_user_path(current_user)
              %li
                = link_to 'Log out', logout_path, method: :delete
        - else
          %li.nav-item
            = link_to 'Log in', login_path, :class =>'nav-link texty'
          %li.nav-item
            = link_to 'Sign up', new_user_path, :class =>'nav-link texty'
