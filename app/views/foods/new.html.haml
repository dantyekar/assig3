.header1stuff
  = render 'layouts/topHeader'
= render 'layouts/flash_messages'
%h4.text-center Create new food
.container.text-center
  = form_for @food, :html => { :multipart => true, :class => 'col s12' } do |f|
    .row
      .input-field.col.s12
        = f.text_field :name, :class => 'validate'
        = f.label :name
        .error= @food.errors.messages[:name][0]
    .row
      .input-field.col.s12
        = f.text_field :description, :class => 'validate'
        = f.label :description, :class => 'active', 'data-error' => "#{@food.errors.messages['description']}"
        .error= @food.errors.messages[:description][0]
    .row
      .input-field.col.s12
        = f.text_field :price, :class => 'validate'
        = f.label :price
        .error= @food.errors.messages[:price][0]
    .row
      .input-field.col.s6
        = f.text_field :prep_time, :class => 'validate'
        = f.label 'Prep time in mins'
        .error= @food.errors.messages[:prep_time][0]
    .row
      .input-field.col.s12
        = f.collection_select(:category_id, Category.all, :id, :title, {}, { :class => 'select_box', :style => 'display:block;' })
        .error= @food.errors.messages[:category_id][0]
    .row
      .col.s12
        = f.file_field :food_image
      .food_upload_progress_bar
        .determinate{:style => 'width: 70%'}
    = f.submit 'Add food', :class => 'btn btn-info'
